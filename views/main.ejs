<!DOCTYPE html>
<html>
  <%- include ("partial/head") %>

  <body>
    <!-- Navbar -->
    <%- include ("partial/navbar") %>
    
    <div class = "container" style="margin-top:100px">
      <div class = "row justify-content-center text-center">
        <div class = "col-5">
          <h1>UFO sightings</h1>
        </div>
      </div>
      <div class="row" style="height:20px"></div>
      <div class="row justify-content-center text-center">
        <div class="col-8">
          <a href="#" class="btn btn-dark w-100">Sort drop down</a>
        </div>
      </div>
      <div class="row" style="height:20px"></div>
      <div class="row justify-content-center text-center">
        <div class="col-8">
          <a href="/sighting" class="btn btn-dark w-100">Submit new sighting</a>
        </div>
      </div>
      <div class="row" style="height:50px"></div>
      <div class="row text-center">
        <div class="col-12"><h3>Reported Sightings</h3></div>
        <div class="col-12">
        <% for (let i = 0; i < sightings.length; i += 1) { %>
          <div class= "row nested bg-light justify-content-center mt-2 rounded align-items-center" style="min-height:30px"> 
            <div class="col-2"><%= sightings[i].date_time%></div>
            <div class="col-2"><%= sightings[i].shape%></div>
            <div class="col-2"><%= sightings[i].city%></div>
            <div class="col-2"><a href="/sighting/<%= i%>">Link</a></div>
          </div>
        <% }; %>
        </div>
      </div>
    </div>


    <!-- Required javascript -->
    <%- include ("partial/body-js") %>
  </body>
</html>