<!DOCTYPE html>
<html>  
  <head>
    <!-- meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-wdith, initial-scale=1"> 
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="/">Spooky UFOs</a>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbar">
        <ul class="nav navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Sightings List</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Shapes</a></li>
          <li class="nav-item"><a class="nav-link" href="/sighting">Report a sighting</a></li>
        </ul>
      </div>
    </nav>

    <div class = "container" style="margin-top:100px">
      <div class = "row justify-content-center text-center">
        <div class = "col-5">
          <h1>UFO sightings</h1>
        </div>
      </div>
      <div class="row" style="height:20px"></div>
      <div class="row justify-content-center text-center">
        <div class="col-3">
          <a href="#" class="btn btn-dark ">Sort drop down</a>
        </div>
      </div>
      <div class="row" style="height:20px"></div>
      <div class="row justify-content-center text-center">
        <div class="col-3">
          <a href="/sighting" class="btn btn-dark">Submit new sighting</a>
        </div>
      </div>
      <div class="row" style="height:50px"></div>
      <div class="row text-center">
        <div class="col-12"><h3>Reported Sightings</h3></div>
        <div class="col-12">
        <% for (let i = 0; i < sightings.length; i += 1) { %>
          <div class= "row nested bg-light justify-content-center mt-2 rounded align-items-center" style="min-height:30px"> 
            <div class="col-2"><%= sightings[i].date_time%></div>
            <div class="col-2"><%= sightings[i].shape%></div>
            <div class="col-2"><%= sightings[i].city%></div>
            <div class="col-2"><a href="/sighting/<%= i%>">Link</a></div>
          </div>
        <% }; %>
        </div>
      </div>
    </div>


    <!-- Required javascript -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
  </body>
</html>