<!DOCTYPE html>
<html>
  <%- include ("partial/head") %>

  <body>
    <!-- Navbar -->
    <%- include ("partial/navbar") %>
    
    <div class = "container" style="margin-top:100px">
      <div class = "row justify-content-center text-center my-3">
        <div class = "col-5">
          <h1>UFO sightings</h1>
        </div>
      </div>

      <div class="row justify-content-center text-center my-3">
        <div class="col-8">
          <a href="#" class="btn btn-dark w-100">Sort drop down</a>
        </div>
      </div>
      
      <div class="row justify-content-center text-center my-3">
        <div class="col-8">
          <a href="/sighting" class="btn btn-dark w-100">Submit new sighting</a>
        </div>
      </div>
      
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Shape</th>
            <th scope="col">City</th>
            <th scope="col">More</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < sightings.length; i += 1) { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= sightings[i].date_time%></td>
            <td><%= sightings[i].shape%></td>
            <td><%= sightings[i].city%></td>
            <td><a href="/sighting/<%= i%>">Link</a></td>
            <td><a href="#">Edit</a></td>
            <td><a href="#">Delete</a></td>
          </tr>
          <% }; %>
        </tbody>
      </table>
      <div class="row" style="min-height:100px"></div>
    </div>


    <!-- Required javascript -->
    <%- include ("partial/body-js") %>
  </body>
</html>