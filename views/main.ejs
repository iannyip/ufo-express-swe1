<!DOCTYPE html>
<html>
  <%- include ("partial/head") %>

  <body>
    <!-- Navbar -->
    <%- include ("partial/navbar") %>
    
    <div class = "container" style="margin-top:100px">
      <div class = "row justify-content-center text-center my-3">
        <div class = "col-5">
          <h1>UFO sightings</h1>
        </div>
      </div>
      
      <div class="row justify-content-center text-center my-3">
        <div class="col-8">
          <a href="/sighting" class="btn btn-dark w-100">Submit new sighting</a>
        </div>
      </div>
      
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><a href="/?sortIndex=true">#</a></th>
            <th scope="col">Date</th>
            <th scope="col">Shape</th>
            <th scope="col"><a href="/?sortCity=true">City</a></th>
            <th scope="col" class="text-center">More</th>
            <th scope="col" class="text-center">Edit</th>
            <th scope="col" class="text-center">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < sightings.length; i += 1) { %>
          <tr>
            <th scope="row"><%= sightings[i].index %></th>
            <td><%= sightings[i].date_time%></td>
            <td><%= sightings[i].shape%></td>
            <td><%= sightings[i].city%></td>
            <td class="text-center"><a href="/sighting/<%= i%>">
              <i class="icon-external-link"></i>
            </a></td>
            <td class="text-center"><a href="/sighting/<%= i%>/edit">
              <i class="icon-pencil"></i>
            </a></td>
            <td class="text-center">
              <!-- <a href="/sighting/<%= i %>/delete">
                <i class="icon-trash"></i>
              </a> -->
              <form action="/sighting/<%=i%>/delete?_method=DELETE" method="POST">
                <button class="btn"><i class="icon-trash"></i></button>
                
              </form>
            </td>
          </tr>
          <% }; %>
        </tbody>
      </table>
      <div class="row" style="min-height:100px"></div>
    </div>


    <!-- Required javascript -->
    <%- include ("partial/body-js") %>
  </body>
</html>